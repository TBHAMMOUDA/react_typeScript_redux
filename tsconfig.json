{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "sourceMap": true,
        "lib": [
            "dom",
            "es6",
            "es7"
        ],
        "types": [
            "webpack-env",
            "node"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./test",
        "./node_modules",
        "./src/app"
    ],
    "compileOnSave": true
}